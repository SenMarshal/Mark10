@model Mark10.Project.Website.Models.CarousalModel

<style>
    #myCarousel {
        width: 80%;
        height: auto;
        margin: 0 auto;
    }
</style>

@if (Model != null && Model.Slides.Any())
{
    <div id="myCarousel" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            @for (int i = 0; i < Model.Slides.Count; i++)
            {
                if (i == 0)
                {
                    <li data-target="#myCarousel" data-slide-to="@i" class="active"></li>
                }
                else
                {
                    <li data-target="#myCarousel" data-slide-to="@i"></li>
                }
            }
        </ol>
        <div class="carousel-inner">
            @{int count = 0; }
            @foreach (var slide in Model.Slides)
            {
                var activeClass = count == 0 ? "active" : string.Empty;
                <div class="item @activeClass">
                    <img src="@slide.ImageUrl" style="width:100%;">
                    <div class="carousal-caption" style="text-align: center;">
                        <h3>@slide.Title</h3>
                        <p>@slide.Description</p>
                        <a id="cta @count" href="@slide.CTA" class="button" target="_blank">View more</a>
                    </div>
                </div>
                count++;
            }
        </div>
        <a class="left carousel-control" href="#myCarousel" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
}
